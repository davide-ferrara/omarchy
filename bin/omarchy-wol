#!/bin/bash

# Add your local ips to your host file over /etc/hosts
# 192.168.8.110    home
# 192.168.8.255    brl

HOME_MAC=$(ip neigh show $(getent hosts home | awk '{print $1}') | awk '/lladdr/ {print $5}')
BRL=$(getent hosts brl | awk '{print $1}')

if [ $1 == "-b" ]; then
  echo $BRL
fi

if [ $1 == "-m" ]; then
  echo $HOME_MAC
fi

if [ $1 == "-s" ]; then
  if ping -c 1 -W 1 home -n -q >/dev/null; then
    echo "󰒋 "
  else
    echo " "
  fi
fi

if [ $1 == "-w" ]; then
  wakeonlan -p 9 -i "$BRL" "$HOME_MAC" -q
fi

if [ $1 == "-i" ]; then
  ping -c 4 -W 1 home
fi
