#!/bin/bash

source "$OMARCHY_PATH/config/omarchy-weather.conf"

weather_data=$(curl -s "https://api.open-meteo.com/v1/forecast?latitude=$LAT&longitude=$LONG&current=weather_code,temperature_2m")

weather_code=$(echo "$weather_data" | jq '.current.weather_code')
temperature_2m=$(echo "$weather_data" | jq '.current.temperature_2m')

# Check for a bad response from curl
if [[ -z "$weather_data" ]]; then
    echo "{\"text\":\"ğŸš«\", \"tooltip\":\"Connection Error\"}"
    exit 1
fi

# Check for jq parsing errors
if [[ -z "$weather_code" || -z "$temperature_2m" ]]; then
    echo "{\"text\":\"ğŸš«\", \"tooltip\":\"Data Parsing Error\"}"
    exit 1
fi

case "$weather_code" in
    0)
        icon="â˜€ï¸"
        condition="Clear sky"
        ;;
    1 | 2 | 3)
        icon="ğŸŒ¤ï¸"
        condition="Partly cloudy"
        ;;
    45 | 48)
        icon="ğŸŒ«ï¸"
        condition="Foggy"
        ;;
    51 | 53 | 55)
        icon="ğŸŒ§ï¸"
        condition="Drizzle"
        ;;
    61 | 63 | 65)
        icon="ğŸŒ§ï¸"
        condition="Rain"
        ;;
    66 | 67)
        icon="ğŸ§Š"
        condition="Freezing Rain"
        ;;
    71 | 73 | 75)
        icon="ğŸŒ¨ï¸"
        condition="Snow"
        ;;
    80 | 81 | 82)
        icon="ğŸŒ¦ï¸"
        condition="Rain Showers"
        ;;
    85 | 86)
        icon="â„ï¸"
        condition="Snow Showers"
        ;;
    95 | 96 | 99)
        icon="â›ˆï¸"
        condition="Thunderstorm"
        ;;
    *)
        icon="â“"
        condition="Unknown"
        ;;
esac

json_output="{\"text\":\"$icon $temperature_2mÂ°C\", \"tooltip\":\"Condition: $condition\"}"
echo "$json_output"
